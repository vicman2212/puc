@*
    Acceso a sistema
*@
@{
    ViewData["title"] = "Acceso";
}
<div id="msn-login"></div>
<div>
    <form id="id-login" class="rounded-3 shadow-lg mt-5 p-2" style="width:40%;margin:auto">
        <div class="container-fluid">
            <div class="m-2">
                <label><strong>USUARIO:</strong></label>
                <input type="text" class="form-control" id="id-usuario" name="Usuario" required />
            </div>
            <div class="m-2">
                <label><strong>CONTRASEÑA:</strong></label>
                <input type="password" class="form-control" id="id-pass" name="Password" required />
            </div>
            <div class="row">
                <div class="col m-2">
                    <input type="submit" id="btn-login" class="btn btn-success" value="INGRESAR" />
                </div>
                <div class="col mt-2 text-center">
                    <a asp-controller="Home" asp-action="OlvidoPass">¿Olvido su contraseña?</a>
                </div>
            </div>
        </div>
        @* <div asp-validation-summary="All" class="alert-danger"></div> *@
    </form>
</div>
